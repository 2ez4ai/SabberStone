<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    
    <root>
      <level value="INFO" />
      <appender-ref ref="MyAppender" />
    </root>
    
    <appender name="MyAppender" type="log4net.Appender.ColoredConsoleAppender">
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="Normal" />
        <acceptOnMatch value="false" />
      </filter>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="Custom1" />
        <acceptOnMatch value="false" />
      </filter>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="Custom2" />
        <acceptOnMatch value="false" />
      </filter>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="Custom3" />
        <acceptOnMatch value="false" />
      </filter>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="Custom4" />
        <acceptOnMatch value="false" />
      </filter>
    </appender>

    <appender name="Normal" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="INFO" />
        <foreColor value="White" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%timestamp %level %-12logger{1} - %message%newline" />
      </layout>
    </appender>

    <appender name="Custom1" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="INFO" />
        <foreColor value="Green, HighIntensity" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%timestamp %level %-12logger{1} - %message%newline" />
      </layout>
    </appender>

    <appender name="Custom2" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="INFO" />
        <foreColor value="Green" />
      </mapping>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="SabberStone.Actions" />
        <acceptOnMatch value="false" />
      </filter>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="SabberStone.Enchants" />
        <acceptOnMatch value="false" />
      </filter>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="SabberStone.Tasks.SimpleTasks" />
        <acceptOnMatch value="false" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%timestamp %level %-12logger{1} - %message%newline" />
      </layout>
    </appender>
    
    <appender name="Custom3" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="INFO" />
        <foreColor value="Yellow" />
      </mapping>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="SabberStone.Enchants" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%timestamp %level %-12logger{1} - %message%newline" />
      </layout>
    </appender>

    <appender name="Custom4" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="INFO" />
        <foreColor value="Cyan" />
      </mapping>
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="SabberStone.Tasks.SimpleTasks" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%timestamp %level %-12logger{1} - %message%newline" />
      </layout>
    </appender>

    <logger name="SimpleTest">
      <level value="INFO" />
      <appender-ref ref="Normal" />
    </logger>

    <logger name="SabberStone.Actions">
      <level value="INFO" />
      <appender-ref ref="Custom1" />
    </logger>

    <logger name="SabberStone">
      <level value="INFO" />
      <appender-ref ref="Custom2" />
    </logger>

    <logger name="SabberStone.Enchants">
      <level value="INFO" />
      <appender-ref ref="Custom3" />
    </logger>

    <logger name="SabberStone.Tasks.SimpleTasks">
      <level value="INFO" />
      <appender-ref ref="Custom4" />
    </logger>
    
  </log4net>
  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
</configuration>